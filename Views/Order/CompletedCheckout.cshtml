@model Order

<div class="container-fluid">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Name</strong>
            <p>Data do Pedido : <strong>@Model.CreatedAt</strong>
            <p>Número do Pedido : <strong>@Model.Id</strong></p>

            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantidade</th>
                    <th>Produto</th>
                    <th>Preço</th>
                </tr>
                        @foreach (var item in Model.Items)
                        {
                    <tr>
                        <td><img src="@item.Product.ImageUrl" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price</td>
                    </tr>
                        }
            </table>

            <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.Total).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Retornar</a>
    </h3>
</div>