@model IEnumerable<Product>
@{
    ViewData["Title"] = "Cat√°logo";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-fluid p-3 mt-5 mb-5">
    <div class="row d-flex justify-content-around gap-3">
        @foreach (var product in Model)
        {
            <div class="card mb-3 p-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://th.bing.com/th/id/OIP.Rtx4iye-2rHVLHi1l2uOfAHaEn?rs=1&pid=ImgDetMain"
                            class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text fw-bold">@product.Price.ToString("c")</p>
                        </div>
                    </div>
                    <button class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        }
    </div>
</div>